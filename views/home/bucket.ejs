<link href="/styles/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">

<div class="container">

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Your bucket</h1>
      <p>
        Ready to start giving?
      </p>
      <p>
        Fill up your bucket and decide the settings of the when the money will be distruibted to those you like.
      </p>
    </div>
  </div>
  
  <% if (!user.bucket) { %>

  <script type="text/javascript">
  $('.form_date').datetimepicker({
    //language:  'uk',
    weekStart: 1,
    todayBtn:  1,
    autoclose: 1,
    todayHighlight: 1,
    startView: 2,
    minView: 2,
    forceParse: 0,
    startDate: '+1d'
    });
</script>

<form action="/bucket/create" class="form-horizontal"  role="form">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="form-group">
                  <label for="dtp_input2" class="col-md-2 control-label">End Date</label>
                  <div class="input-group date form_date col-md-5" data-date="" data-date-format="dd/mm/yyyy" data-link-field="dtp_input2" data-link-format="dd/mm/yyyy">
                      <input class="form-control" size="16" type="text" value="" id="date" readonly>
            <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                  </div>
          <input type="hidden" id="dtp_input2" value="" /><br/>
              </div>
      </div>
  </div>


  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="form-group">
        <label for="amount" class="col-md-2 control-label">Amount</label>
        <div class="input-group col-md-5">
          <div class="input-group-addon">&pound;</div>
          <input type="text" class="form-control" id="amount" placeholder="Amount">
        </div>
        <button type="submit" class="btn btn-primary col-md-6">Create your bucket</button>
      </div>
    </div>
  </div>



  </form>

  <% } else { %>

  <div class="row" style="padding-top: 5%;">
    <div class="col-md-4 col-md-offset-4" style="padding-top: 1%;">
      <button class="btn btn-default btn-lg" type="submit">
      <p>Your current buckets balance</p>
      <center>
      <h1>&pound;<%= Bucket.amount  %></h1>
      <small>The money will be divided up on <%= Bucket.enddate  %></small>
      </center>
      </button>
    </div>
  </div>

  <% } %>

<script type="text/javascript" src="/js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="/js/jquery-1.8.3.min.js" charset="UTF-8"></script>



</div><!-- /.container -->
